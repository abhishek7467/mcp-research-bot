# API Keys - WORKING CONFIGURATION

# OpenAI API Key (optional - leave blank if only using Gemini)
OPENAI_API_KEY=

# Google Gemini API Keys (using your provided keys)
GEMINI_API_KEY=

# Crossref (for Polite Pool - optional, use your email)
CROSSREF_EMAIL=research.bot@example.com

# Unpaywall (optional)
UNPAYWALL_EMAIL=research.bot@example.com

# Database (SQLite by default, no setup needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mcp_research
DB_USER=mcp_user
DB_PASSWORD=

# Elasticsearch (optional - not required for basic usage)
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# Slack Webhook (optional - leave blank to disable)
SLACK_WEBHOOK_URL=

# Email SMTP (optional - leave blank to disable)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_TO=

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
